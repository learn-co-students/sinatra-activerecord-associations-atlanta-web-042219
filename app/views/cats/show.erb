<style>
    form {display: inline;}
</style>

<!--body START-->

<h1><%= @cat.name %></h1>
<h3>
	Breed: <%= @cat.breed %><br><br>
	Age:   <%= @cat.age %> years old<br><br>
	<%= @cat.owner == nil ? "This cat doesn't have an owner!" : "Owner: "+@cat.owner.name %>
</h3>

<form method="GET" action="/cats">
	<input type="submit" value="Home">
</form>

<form method="GET" action="/cats/<%= @cat.id %>/edit">
	<input type="submit" value="Update">
</form>

<form method="POST" action="/cats/<%= @cat.id %>">
	<input type="hidden" name="_method" value="DELETE">
	<input type="submit" value="Delete">
</form>

